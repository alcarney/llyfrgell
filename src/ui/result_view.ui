<?xml version="1.0" encoding="UTF-8" ?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="LlyfrSearchResultView" parent="GtkBox">
    <property name="margin-start">70</property>
    <property name="margin-top">30</property>
    <property name="margin-bottom">30</property>
    <property name="margin-end">70</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkLabel" id="filepath_label">
        <property name="halign">start</property>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow">
        <property name="vscrollbar-policy">never</property>
        <property name="margin-top">6</property>
        <child>
          <object class="GtkTextView" id="text_view">
            <property name="editable">false</property>
            <property name="monospace">true</property>
            <property name="pixels-below-lines">1</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <property name="left-margin">6</property>
            <property name="top-margin">12</property>
            <property name="bottom-margin">12</property>
            <style>
              <class name="solarized" />
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
